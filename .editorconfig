root = true

[*.{cs,vb}]
# Open brace on same line (none = same line, all = new line)
csharp_new_line_before_open_brace = none:warning

csharp_new_line_before_open_brace_for_types = none:suggestion
csharp_new_line_before_open_brace_for_methods = none:suggestion
csharp_new_line_before_open_brace_for_properties = none:suggestion
csharp_new_line_before_open_brace_for_accessors = none:suggestion
csharp_new_line_before_open_brace_for_anonymous_methods = none:suggestion
csharp_new_line_before_open_brace_for_anonymous_types = none:suggestion
csharp_new_line_before_open_brace_for_control_blocks = none:suggestion

# CS8600: Converting null literal or possible null value to non-nullable type.
dotnet_diagnostic.CS8600.severity = silent

# CS8603: Possible null reference return.
dotnet_diagnostic.CS8603.severity = silent

# CS8619: Nullability of reference types in value doesn't match target type.
dotnet_diagnostic.CS8619.severity = none

# CS8601: Possible null reference assignment.
dotnet_diagnostic.CS8601.severity = none

# CS8625: Cannot convert null literal to non-nullable reference type.
dotnet_diagnostic.CS8625.severity = none
